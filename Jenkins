pipeline {
    agent any
    tools {
          Maven "Maven"
    }
    stages
    {
        stage('Clone code') {
           steps
           {
            git branch: 'feature/Maven', url: 'https://github.com/vinooz-git/BDD_Framework.git'
            }
        }

        stage('Run tests'){
            steps
            {
                if(isUnix()){
                    sh "mvn clean test"
                } else {
                bat "mvn clean test"
                }
            }
        }

        stage('Generate report'){
           steps
           {
           cucumber buildStatus: 'UNCHANGED', customCssFiles: '', customJsFiles: '', failedFeaturesNumber: -1, failedScenariosNumber: -1, failedStepsNumber: -1, fileIncludePattern: '**/*.json', pendingStepsNumber: -1, reportTitle: 'AnH CRM Regression Report', skippedStepsNumber: -1, sortingMethod: 'ALPHABETICAL', undefinedStepsNumber: -1
           }
        }
    }
}